{
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"preserveSymlinks": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2015",
			"esnext.asynciterable"
		],
		"typeRoots": [
			"./node_modules/@types,"
		],
		"types": ["node"],
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"sourceMap": true,
		"inlineSources": true,
		"target": "es6",
		"module": "commonjs",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"pretty": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		".idea",
		".vscode",
		"dist",
		"node_modules",
		"tests"
	]
}
